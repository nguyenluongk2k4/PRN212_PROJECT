                </Grid>
            </materialDesign:Card>

            <!-- In Progress Orders -->
            <materialDesign:Card Grid.Column="1" Margin="8" UniformCornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FFFFCC" Padding="16">
                        <Grid>
                            <TextBlock Text="ĐANG CHUẨN BỊ" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" />
                            <TextBlock Text="8 món" FontSize="16" HorizontalAlignment="Right" />
                        </Grid>
                    </Border>

                    <!--+1 bản demo tí cop trên xuống-->


                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Order Item 1 -->
                            <materialDesign:Card Margin="8" UniformCornerRadius="8">
                                <Grid Margin="16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Bàn 03" FontSize="18" FontWeight="Bold" />
                                        <TextBlock Grid.Column="1" Text="10:15 (12')" FontSize="16" Foreground="Orange" />
                                    </Grid>

                                    <Separator Grid.Row="1" Margin="0,8" />

                                    <StackPanel Grid.Row="2">
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="2x" FontWeight="Medium" Margin="0,0,16,0" />
                                            <TextBlock Grid.Column="1" Text="Burger Gà Cay" />
                                            <Button Grid.Column="2" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Blue">
                                                <materialDesign:PackIcon Kind="CheckCircleOutline" />
                                            </Button>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>
