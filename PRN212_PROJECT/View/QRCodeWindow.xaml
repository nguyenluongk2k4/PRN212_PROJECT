<Window x:Class="PRN212_PROJECT.View.QRCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Scan to Pay" Height="400" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Payment Instructions -->
        <TextBlock Grid.Row="0" Text="Scan to Pay with Your Banking App" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <!-- QR Code Image -->
        <Image Grid.Row="1" x:Name="QRCodeImage" Stretch="Uniform" Margin="0,0,0,10"/>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Close" Width="100" Height="30" HorizontalAlignment="Center"
                Click="CloseButton_Click"/>
    </Grid>
</Window>