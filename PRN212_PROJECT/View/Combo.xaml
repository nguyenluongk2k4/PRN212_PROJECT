<Window x:Class="PRN212_PROJECT.View.Combo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_PROJECT.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        DataContext="{StaticResource ComboVM}"
        Title="Combo" Height="700" Width="800">
    <Grid Background="#CE70F4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"   HorizontalAlignment="Center" Margin="20,50,20,0">
            <Border BorderBrush="White" BorderThickness="2" CornerRadius="5" Background="White">
                <StackPanel Margin="10">
                    <Label Content="Combo Hiện có" 
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Margin="0,10,0,20"/>
                    <DataGrid 
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     Margin="0,0,0,20"
                     ItemsSource="{Binding Combo,UpdateSourceTrigger=PropertyChanged}" 
                     SelectedItem="{Binding SelectedCombo}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" 
                       Width="*"
                       Binding="{Binding ComboName}"/>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                    <Label Content="{Binding Error}" Foreground="Red" FontSize="10"/>
                    <TextBox  Margin="10,40"

materialDesign:HintAssist.Hint="Điền Tên Mới Tại Đây" Text="{Binding NewComboName ,UpdateSourceTrigger=PropertyChanged}"/>

                    <Button
              Content="Thêm mới"
              Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
              ToolTip="MaterialDesignFlatSecondaryMidBgButton"
              Background="#5daa5b"
              BorderBrush="#CE70F4"
              Foreground="White"
              Margin="0,20,0,0"  Command="{Binding AddNewCombo}"/>






                </StackPanel>
            </Border>
        </StackPanel>
        <StackPanel Grid.Column="1"  HorizontalAlignment="Center" Margin="20,50,50,0">
            <Border BorderBrush="White" BorderThickness="2" CornerRadius="5" Background="White">
                <StackPanel Margin="10">
                    <Label Content="Các Loại Hiện Có" 
                 HorizontalAlignment="Center"
                 FontSize="20"
                 FontWeight="Bold"
                 Margin="0,10,0,20"/>
                    <DataGrid 
 AutoGenerateColumns="False"
 IsReadOnly="True"
 Margin="0,0,0,20"
 ItemsSource="{Binding ListComboFood,UpdateSourceTrigger=PropertyChanged}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" 
                        Width="*"
                        Binding="{Binding Food.FoodName}"/>
                            <DataGridTextColumn Header="Amount" 
                        Width="*"
                        Binding="{Binding Amount}"/>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                 

                    <Button
              Content="Xóa"
              Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
              ToolTip="MaterialDesignFlatSecondaryMidBgButton"
              Background="#5daa5b"
              BorderBrush="#CE70F4"
              Foreground="White"
              Margin="0,20,0,0"  Command="{Binding DeleteCombo}"/>
                    <Button
              Content="Sửa"
              Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
              ToolTip="MaterialDesignFlatSecondaryMidBgButton"
              Background="#ff9100"
              BorderBrush="#CE70F4"
              Foreground="White"
              Margin="0,20,0,0"  Command="{Binding UpdateCombo}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
