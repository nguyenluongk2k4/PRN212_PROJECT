<Window x:Class="PRN212_PROJECT.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PRN212_PROJECT.View"
        xmlns:domain="clr-namespace:PRN212_PROJECT.Validate"
mc:Ignorable="d"
Title="LoginWindow" Height="650" Width="900"
WindowStyle="SingleBorderWindow">
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4B3A96" Offset="0.0" />
            <!-- Tím đậm -->
            <GradientStop Color="#A88BFF" Offset="1.0" />

        </LinearGradientBrush>
    </Window.Background>
    <Grid>

        <materialDesign:Card 
           Background="White" 
           Width="300" 
           Height="350" 
           VerticalAlignment="Center" 
           HorizontalAlignment="Center"
           materialDesign:ElevationAssist.Elevation="Dp4"
           >
            <StackPanel Margin="20">

                <Ellipse Width="60" Height="60" Margin="0,0,0,20" HorizontalAlignment="Center">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="#676f73" />
                    </Ellipse.Fill>

                    <Ellipse.OpacityMask>
                        <VisualBrush Stretch="Uniform">
                            <VisualBrush.Visual>
                                <Path Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" 
                                     Fill="White" Width="24" Height="24" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Ellipse.OpacityMask>
                </Ellipse>
                <!-- Tiêu đề -->
                <TextBlock 
                   Text="Member Login" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" />
                <!-- TextBox Email -->
                <TextBox
                   materialDesign:HintAssist.Hint="Email"
                   Style="{StaticResource MaterialDesignFilledTextBox}"
                   Margin="0,0,0,10">
                    <!--<TextBox.Text>
                       <Binding
                           Path="Email"
                           UpdateSourceTrigger="PropertyChanged">
                           <Binding.ValidationRules>
                               <domain:NotEmptyValidationRule
                                   ValidatesOnTargetUpdated="True" />
                           </Binding.ValidationRules>
                       </Binding>
                   </TextBox.Text>-->
                </TextBox>

                <StackPanel
 Orientation="Vertical"
>
                    <PasswordBox
                       Margin="0px 0px 0px 20px"
   materialDesign:HintAssist.HelperText="Ít nhất 6 kí tự"
   materialDesign:HintAssist.Hint="Password"
   materialDesign:PasswordBoxAssist.Password="{Binding Path=Password1Validated, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
   Style="{StaticResource MaterialDesignFilledPasswordBox}"
   />
                </StackPanel>

                <Button
                   Content="LOGIN"
                   Background="#4CAF50"
                   Foreground="White"
                   materialDesign:ButtonAssist.CornerRadius="10"
                   Width="250"
                   Height="40"
                   Margin="0,20,0,10"
                   HorizontalAlignment="Center" />


            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
