<Window x:Class="PRN212_PROJECT.View.AdminDashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PRN212_PROJECT.View"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="AdminDashBoard" Height="1080" Width="1920">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="Red">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <materialDesign:PackIcon Kind="Store" Width="40" Height="40" Foreground="White" Margin="0,0,16,0"/>
                <TextBlock Text="QUẢN LÝ CỬA HÀNG" FontSize="30" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Button Style="{StaticResource MaterialDesignRaisedButton}" Background="White" Foreground="Red" Margin="8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Account" Margin="0,0,8,0"/>
                        <TextBlock Text="Admin"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignRaisedButton}" Background="White" Foreground="Red" Margin="8,0">
                    <materialDesign:PackIcon Kind="Logout" />
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Quick Access Panel -->
            <materialDesign:Card Grid.Row="0" Margin="8" UniformCornerRadius="8" Padding="16">
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Width="200" Height="120" Margin="12" Style="{StaticResource MaterialDesignRaisedButton}" Background="Red" Foreground="White">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="FoodForkDrink" Width="48" Height="48" HorizontalAlignment="Center" />
                            <TextBlock Text="Quản lý Danh mục" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,8,0,0"/>
                            <TextBlock Text="Món ăn, thức uống" FontSize="12" TextAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Width="200" Height="120" Margin="12" Style="{StaticResource MaterialDesignRaisedButton}" Background="#FF6F00" Foreground="White" Command="{Binding GoOrder}">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="Receipt" Width="48" Height="48" HorizontalAlignment="Center" />
                            <TextBlock Text="Quản lý Đơn hàng" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,8,0,0"/>
                            <TextBlock Text="Kiểm tra, duyệt đơn" FontSize="12" TextAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Width="200" Height="120" Margin="12" Style="{StaticResource MaterialDesignRaisedButton}" Background="#2E7D32" Foreground="White">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="ChartLine" Width="48" Height="48" HorizontalAlignment="Center" />
                            <TextBlock Text="Doanh thu" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,8,0,0"/>
                            <TextBlock Text="Thống kê, báo cáo" FontSize="12" TextAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Width="200" Height="120" Margin="12" Style="{StaticResource MaterialDesignRaisedButton}" Background="#0277BD" Foreground="White">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="AccountMultiple" Width="48" Height="48" HorizontalAlignment="Center" />
                            <TextBlock Text="Nhân viên" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,8,0,0"/>
                            <TextBlock Text="Quản lý nhân sự" FontSize="12" TextAlignment="Center" />
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </materialDesign:Card>

            <!-- Data Management -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Food Management -->
                <materialDesign:Card Grid.Column="0" Margin="8" UniformCornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Background="#FFEBEE">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="DANH SÁCH MÓN ĂN" FontSize="18" FontWeight="Bold" />

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}" Background="Green" Margin="0,0,8,0">
                                    <materialDesign:PackIcon Kind="Plus" />
                                </Button>
                                <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}" Background="Red">
                                    <materialDesign:PackIcon Kind="Delete" />
                                </Button>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="1" Margin="16,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" materialDesign:HintAssist.Hint="Tìm kiếm..." Margin="0,0,16,0" />

                            <ComboBox Grid.Column="1" Width="150" materialDesign:HintAssist.Hint="Loại món">
                                <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                                <ComboBoxItem Content="Đồ ăn"/>
                                <ComboBoxItem Content="Thức uống"/>
                                <ComboBoxItem Content="Đồ ăn vặt"/>
                            </ComboBox>
                        </Grid>

                        <DataGrid Grid.Row="2" Margin="16,8"
                          CanUserAddRows="False"
                          AutoGenerateColumns="False"
                          GridLinesVisibility="All">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="" Width="40" />
                                <DataGridTextColumn Header="Tên món" Width="*" />
                                <DataGridTextColumn Header="Loại" Width="100" />
                                <DataGridTextColumn Header="Giá" Width="100" />
                                <DataGridTemplateColumn Header="Trạng thái" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Thao tác" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Style="{StaticResource MaterialDesignIconButton}" Padding="2">
                                                    <materialDesign:PackIcon Kind="Pencil" />
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}" Padding="2">
                                                    <materialDesign:PackIcon Kind="Delete" />
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>

                <!-- Dashboard / Stats -->
                <materialDesign:Card Grid.Column="1" Margin="8" UniformCornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Background="#E3F2FD">
                            <TextBlock Text="THỐNG KÊ NHANH" FontSize="18" FontWeight="Bold" />
                        </Grid>

                        <WrapPanel Grid.Row="1" Orientation="Horizontal" Margin="16,8">
                            <materialDesign:Card Width="130" Height="90" Margin="4" UniformCornerRadius="8" Background="#E8F5E9">
                                <StackPanel VerticalAlignment="Center" Margin="8">
                                    <TextBlock Text="Đơn hôm nay" FontSize="12" HorizontalAlignment="Center" />
                                    <TextBlock Text="46" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" />
                                    <TextBlock Text="+12% so với HQ" FontSize="10" Foreground="Green" HorizontalAlignment="Center" />
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Width="130" Height="90" Margin="4" UniformCornerRadius="8" Background="#FFF3E0">
                                <StackPanel VerticalAlignment="Center" Margin="8">
                                    <TextBlock Text="Doanh thu" FontSize="12" HorizontalAlignment="Center" />
                                    <TextBlock Text="4.6M" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" />
                                    <TextBlock Text="+8% so với HQ" FontSize="10" Foreground="Green" HorizontalAlignment="Center" />
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Width="130" Height="90" Margin="4" UniformCornerRadius="8" Background="#E1F5FE">
                                <StackPanel VerticalAlignment="Center" Margin="8">
                                    <TextBlock Text="Món bán chạy" FontSize="12" HorizontalAlignment="Center" />
                                    <TextBlock Text="Burger" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
                                    <TextBlock Text="78 đơn" FontSize="10" HorizontalAlignment="Center" />
                                </StackPanel>
                            </materialDesign:Card>
                        </WrapPanel>

                        <Grid Grid.Row="2" Margin="16,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="ĐƠN HÀNG GẦN ĐÂY" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />

                            <ListView Grid.Row="1">
                                <ListViewItem>
                                    <Grid Width="400">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="12" Height="12" CornerRadius="6" Background="Green" Margin="0,0,16,0" />

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Bàn 05 - Order #1058" FontWeight="SemiBold" />
                                            <TextBlock Text="2 món - 126,500đ" FontSize="12" Foreground="Gray" />
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="10:35" />
                                    </Grid>
                                </ListViewItem>

                                <ListViewItem>
                                    <Grid Width="400">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="12" Height="12" CornerRadius="6" Background="Orange" Margin="0,0,16,0" />

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Bàn 12 - Order #1057" FontWeight="SemiBold" />
                                            <TextBlock Text="4 món - 245,000đ" FontSize="12" Foreground="Gray" />
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="10:22" />
                                    </Grid>
                                </ListViewItem>
                            </ListView>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</Window>
