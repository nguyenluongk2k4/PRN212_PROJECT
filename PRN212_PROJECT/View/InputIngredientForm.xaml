<Window x:Class="PRN212_PROJECT.View.InputIngredientForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PRN212_PROJECT.View"
        mc:Ignorable="d"
        Title="InputIngredientExcel" Height="1080" Width="1920"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Thanh điều hướng -->
        <materialDesign:ColorZone Mode="PrimaryMid" Grid.Row="0" Padding="16" Background="#2196F3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="btnBack" 
                            Style="{StaticResource MaterialDesignIconButton}"
                            Foreground="White"
                            ToolTip="Quay lại"
                            Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                    </Button>

                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FoodVariant" Width="30" Height="30" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Nhập Nguyên Liệu Thủ Công" 
                                   FontSize="20" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Nội dung chính -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Biểu mẫu nhập -->
            <Border Grid.Column="0" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Margin="0,0,16,0"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="Thông Tin Nguyên Liệu" 
                               FontSize="18" 
                               FontWeight="Medium" 
                               Margin="0,0,0,16"/>

                    <TextBox materialDesign:HintAssist.Hint="Mã Nguyên Liệu"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             x:Name="txtMaNguyenLieu"
                             Margin="0,0,0,16"/>

                    <TextBox materialDesign:HintAssist.Hint="Tên Nguyên Liệu"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             x:Name="txtTenNguyenLieu"
                             Margin="0,0,0,16"/>

                    <ComboBox materialDesign:HintAssist.Hint="Đơn Vị Tính"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              x:Name="cboDonVi"
                              Margin="0,0,0,16">
                        <ComboBoxItem>Kg</ComboBoxItem>
                        <ComboBoxItem>Gram</ComboBoxItem>
                        <ComboBoxItem>Lít</ComboBoxItem>
                        <ComboBoxItem>Mililit</ComboBoxItem>
                        <ComboBoxItem>Cái</ComboBoxItem>
                    </ComboBox>

                    <TextBox materialDesign:HintAssist.Hint="Số Lượng Tồn Kho"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             x:Name="txtSoLuongTonKho"
                             Margin="0,0,0,16"/>

                    <TextBox materialDesign:HintAssist.Hint="Ghi Chú"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             x:Name="txtGhiChu"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="100"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

            <!-- Danh sách nguyên liệu -->
            <Border Grid.Column="1" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Danh Sách Nguyên Liệu" 
                               FontSize="18" 
                               FontWeight="Medium" 
                               Margin="0,0,0,16"/>

                    <DataGrid Grid.Row="1" 
                              x:Name="dgNguyenLieu"
                              materialDesign:DataGridAssist.CellPadding="8"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã" Binding="{Binding MaNguyenLieu}"/>
                            <DataGridTextColumn Header="Tên Nguyên Liệu" Binding="{Binding TenNguyenLieu}"/>
                            <DataGridTextColumn Header="Đơn Vị" Binding="{Binding DonVi}"/>
                            <DataGridTextColumn Header="Tồn Kho" Binding="{Binding SoLuongTonKho}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,16,0,0">
                        <Button Content="Thêm" 
                                x:Name="btnThem"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Margin="0,0,8,0"/>
                        <Button Content="Xóa" 
                                x:Name="btnXoa"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Nút điều khiển -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,16,16,16">
            <Button Content="Hủy" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Lưu" 
                    x:Name="btnLuu"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
