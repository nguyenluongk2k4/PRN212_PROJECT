<Window x:Class="PRN212_PROJECT.View.CustomerOrderScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_PROJECT.View"
        xmlns:BaseVM="clr-namespace:PRN212_PROJECT.View_Model"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="CustomerOrderScreen" Height="1920" Width="1080">
    <Window.Resources>
        <BaseVM:ManageFoodVM x:Key="ManageFoodVM" />
        <BaseVM:StatusToBoolConverter x:Key="StatusConverter"/>
        <BaseVM:ImagePathConverter x:Key="ImagePathConverter"/>
        <BaseVM:WidthConverterForFourItems x:Key="WidthConverterForFourItems"/>
        <BaseVM:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <BaseVM:BooleanToStringConverter x:Key="BooleanToStringConverter"/>
        <BaseVM:TotalPriceConverter x:Key="TotalPriceConverter"/>
        <!-- Data Template for Food -->
        <DataTemplate x:Key="FoodTemplate">
            <Border Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource WidthConverterForFourItems}}"
                    Margin="10" Padding="10" Background="#F0F0F0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Food Image -->
                    <Image Grid.Row="0" Source="{Binding Image, Converter={StaticResource ImagePathConverter}}" 
                           Height="100" Stretch="Uniform" Margin="0,0,0,10"/>
                    <!-- Food Name and Price -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="{Binding FoodName, FallbackValue='Tên món không xác định'}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0}đ, FallbackValue='0đ'}" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                        <!-- Add to Cart Button with Icon -->
                        <Button Width="50" Margin="15,0,0,0"
                                Content="+"
                                Command="{Binding DataContext.AddFoodToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                ToolTip="Resource name: MaterialDesignRaisedButton"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
        <!-- Data Template for Combo -->
        <DataTemplate x:Key="ComboTemplate">
            <Border Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource WidthConverterForFourItems}}"
                    Margin="10" Padding="10" Background="#F0F0F0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Combo Name -->
                    <TextBlock Grid.Row="0" Text="{Binding ComboName, FallbackValue='Tên combo không xác định'}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                    <!-- Combo Details -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ComboDetails}" Margin="0,0,0,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Food.FoodName, FallbackValue='Món không xác định'}" FontSize="12"/>
                                    <TextBlock Text=" x " FontSize="12"/>
                                    <TextBlock Text="{Binding Amount, FallbackValue='0'}" FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <!-- Combo Price and Add Button -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Price, StringFormat={}{0:N0}đ, FallbackValue='0đ'}" FontSize="12" Foreground="Gray"/>
                        <Button Width="50" Margin="15,0,0,0"
                                Content="+"
                                Command="{Binding DataContext.AddComboToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                ToolTip="Resource name: MaterialDesignRaisedButton"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
        <!-- Data Template for OrderDetailFood in Cart -->
        <!-- Data Template for OrderDetailFood in Cart -->
        <DataTemplate x:Key="OrderDetailFoodTemplate">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="{Binding Food.FoodName, FallbackValue='Món không xác định'}" Width="100"/>
                <TextBlock Text="{Binding Amount, FallbackValue='0'}" Width="30" TextAlignment="Center"/>
                <Button  Background="Green" Width="50" Margin="15,0,0,0"
                 Content="+"
                 Command="{Binding DataContext.IncrementFoodQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
             CommandParameter="{Binding}"
                 Style="{StaticResource MaterialDesignRaisedButton}"
                 ToolTip="Resource name: MaterialDesignRaisedButton"/>
           
                <Button Background="Red" Width="50" Margin="15,0,0,0"
    Content="-"
     Command="{Binding DataContext.DecrementFoodQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
  CommandParameter="{Binding}"
    Style="{StaticResource MaterialDesignRaisedButton}"
    ToolTip="Resource name: MaterialDesignRaisedButton"/>
                <TextBlock Width="60" TextAlignment="Right">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource TotalPriceConverter}" StringFormat="{}{0:N0}đ">
                            <Binding Path="Price" FallbackValue="0"/>
                            <Binding Path="Amount" FallbackValue="0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </DataTemplate>

        <!-- Data Template for OrderDetailCombo in Cart -->
        <DataTemplate x:Key="OrderDetailComboTemplate">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="{Binding Combo.ComboName, FallbackValue='Combo không xác định'}" Width="100"/>
                <TextBlock Text="{Binding Amount, FallbackValue='0'}" Width="30" TextAlignment="Center"/>
             

                <Button Content="+" Background="Green" Width="50" Margin="15,0,0,0"
    Command="{Binding DataContext.IncrementComboQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
  CommandParameter="{Binding}"
    Style="{StaticResource MaterialDesignRaisedButton}"
    ToolTip="Resource name: MaterialDesignRaisedButton"/>

                <Button Content="-" Background="Red" Width="50" Margin="15,0,0,0"
    Command="{Binding DataContext.DecrementComboQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
  CommandParameter="{Binding}"
  Style="{StaticResource MaterialDesignRaisedButton}"
  ToolTip="Resource name: MaterialDesignRaisedButton"/>

                <TextBlock Width="60" TextAlignment="Right">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource TotalPriceConverter}" StringFormat="{}{0:N0}đ">
                            <Binding Path="Price" FallbackValue="0"/>
                            <Binding Path="Amount" FallbackValue="0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side: Food/Combo List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" MinHeight="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Type of Food Buttons and Toggle Button -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ItemsControl Grid.Column="0" ItemsSource="{Binding FoodTypes}" HorizontalAlignment="Center" 
                              Visibility="{Binding IsShowingFoods, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="10,5">
                                <Button Content="{Binding TypeName}"
                                        Command="{Binding DataContext.SelectFoodTypeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        Padding="10,5" Background="#FF6200EE" Foreground="White" BorderBrush="Gray" BorderThickness="1"/>
                                <TextBlock Text="{Binding Foods.Count}" 
                                           Background="Red" Foreground="White" 
                                           Padding="5,2" Margin="5,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Grid.Column="1" Content="{Binding IsShowingFoods, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Xem Combo|Xem Món Ăn'}"
                        Command="{Binding ToggleDisplayCommand}"
                        Background="Red" Foreground="White" Padding="10,5" Margin="10,0"/>
            </Grid>
            <!-- Food/Combo Items -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DisplayItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplateSelector>
                            <BaseVM:DisplayItemTemplateSelector
                                FoodTemplate="{StaticResource FoodTemplate}"
                                ComboTemplate="{StaticResource ComboTemplate}"/>
                        </ItemsControl.ItemTemplateSelector>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Right Side: Cart -->
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="White" Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Giỏ Hàng" FontSize="16" FontWeight="Bold" Margin="10"/>
                <ListBox Grid.Row="1" Margin="10" ItemsSource="{Binding CartItems}">
                    <ListBox.ItemTemplateSelector>
                        <BaseVM:CartItemTemplateSelector
                            FoodTemplate="{StaticResource OrderDetailFoodTemplate}"
                            ComboTemplate="{StaticResource OrderDetailComboTemplate}"/>
                    </ListBox.ItemTemplateSelector>
                </ListBox>
                <TextBlock Grid.Row="2" Text="{Binding TotalPrice, StringFormat='Tổng: {0:N0}đ'}" FontSize="14" FontWeight="Bold" Margin="10" HorizontalAlignment="Right"/>
                <Button Grid.Row="3" Content="Thanh Toán" Background="Green" Foreground="White" Margin="10"
                        Command="{Binding CheckoutCommand}"/>
            </Grid>
        </Border>
    </Grid>
</Window>