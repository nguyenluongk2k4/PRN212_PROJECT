<Window x:Class="PRN212_PROJECT.View_Model.InputIngredientExcel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PRN212_PROJECT.View_Model"
        mc:Ignorable="d"
        Title="InputIngredientExcel" Height="1080" Width="1920"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Thanh điều hướng -->
        <materialDesign:ColorZone Mode="PrimaryMid" Grid.Row="0" Padding="16" Background="#2196F3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="btnBack" 
                            Style="{StaticResource MaterialDesignIconButton}"
                            Foreground="White"
                            ToolTip="Quay lại"
                            Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                    </Button>

                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileExcelBox" Width="30" Height="30" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Import Nguyên Liệu" 
                                   FontSize="20" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Nội dung chính -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Phần chọn file và thông tin file -->
                <Border Grid.Column="0" 
                        BorderBrush="{DynamicResource MaterialDesignDivider}" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Margin="0,0,16,0"
                        Padding="16">
                    <StackPanel>
                        <TextBlock Text="Chọn File Excel" 
                                   FontSize="18" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                     materialDesign:HintAssist.Hint="Đường dẫn file Excel"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     x:Name="txtFilePath"
                                     IsReadOnly="True"/>

                            <Button Grid.Column="1" 
                                    
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    x:Name="btnBrowseFile"
                                    Margin="16,0,0,0">
                                <materialDesign:PackIcon Kind="FileExcel" />
                            </Button>
                        </Grid>

                        <!-- Thông tin file -->
                        <StackPanel Margin="0,16,0,0">
                            <TextBlock Text="Thông Tin File" 
                                       FontSize="16" 
                                       FontWeight="Medium"/>

                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Tên File:" 
                                           FontWeight="Medium" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" 
                                           x:Name="txtFileName" 
                                           Text="Chưa chọn file"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Số Dòng:" 
                                           FontWeight="Medium" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" 
                                           x:Name="txtRowCount" 
                                           Text="0"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Phần xem trước dữ liệu -->
                <Border Grid.Column="1" 
                        BorderBrush="{DynamicResource MaterialDesignDivider}" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Xem Trước Dữ Liệu" 
                                   FontSize="18" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,16"/>

                        <DataGrid Grid.Row="1" 
                                  x:Name="dgPreviewData"
                                  materialDesign:DataGridAssist.CellPadding="8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                                  AutoGenerateColumns="True"
                                  IsReadOnly="True"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Nút điều khiển -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,16,0,0">
                <Button Content="Hủy" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0"/>
                <Button Content="Import" 
                        x:Name="btnImport"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
